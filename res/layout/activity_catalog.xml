<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivity" >

<ScrollView 
    android:id="@+id/catalog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout 
        android:id="@+id/fullcatalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 	>
        <TextView 
            android:id="@+id/private_broadcast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_broadcast"
            android:paddingLeft="12sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:textColor="#000"
            android:background="#CCC"
            android:textSize="12sp"/>
        <com.boqi.qianban.widget.TagsGridView 
            android:id="@+id/private_broadcast_catalog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:columnWidth="80dp"
            android:layout_below="@id/private_broadcast"/>
        <TextView android:id="@+id/hot_module"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/hot_module"
            android:textSize="12sp"
            android:paddingLeft="12sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:textColor="#000"
            android:background="#CCC"
            android:layout_below="@id/private_broadcast_catalog"/>
        <com.boqi.qianban.widget.TagsGridView  android:id="@+id/hot_module_catalog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:columnWidth="80dp"
            android:layout_below="@id/hot_module"/>
        <TextView android:id="@+id/fast_module"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fast_module"
            android:paddingLeft="12sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:textColor="#000"
            android:background="#CCC"
            android:textSize="12sp"
            android:layout_below="@id/hot_module_catalog"/>
        <com.boqi.qianban.widget.TagsGridView  android:id="@+id/fast_module_catalog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:columnWidth="80dp"
            android:layout_below="@id/fast_module"/>
        <TextView android:id="@+id/com_module"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/com_module"
            android:paddingLeft="12sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:textColor="#000"
            android:background="#CCC"
            android:textSize="12sp"
            android:layout_below="@id/fast_module_catalog"/>
        <com.boqi.qianban.widget.TagsGridView  android:id="@+id/com_module_catalog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:columnWidth="80dp"
            android:layout_below="@id/com_module"/>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
