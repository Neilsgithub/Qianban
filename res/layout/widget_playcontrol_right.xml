<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        
		<ImageButton 
		    android:layout_gravity="center_vertical"
		    android:layout_weight="1"
	        android:id="@+id/playcontrol_love"
	        android:layout_width="0dp"
	        android:layout_height="64dp"
	        android:background="@drawable/titlebar_button_background"
	        android:src="@drawable/love"
	        />
	    
	    <ImageButton
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1" 
	        android:id="@+id/playcontrol_ban"
	        android:layout_width="0dp"
	        android:layout_height="64dp"
	        android:background="@drawable/titlebar_button_background"
	        android:src="@drawable/ban"
	        />
	    
	    <ImageButton 
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:id="@+id/playcontrol_download"
	        android:layout_width="0dp"
	        android:layout_height="64dp"
	        android:background="@drawable/titlebar_button_background"
	        android:src="@drawable/download"
	        />
	    
	    <ImageButton 
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:id="@+id/playcontrol_share"
	        android:layout_width="0dp"
	        android:layout_height="64dp"
	        android:background="@drawable/titlebar_button_background"
	        android:src="@drawable/share"
	        />
	
        
        
    </LinearLayout>
    
</RelativeLayout>
